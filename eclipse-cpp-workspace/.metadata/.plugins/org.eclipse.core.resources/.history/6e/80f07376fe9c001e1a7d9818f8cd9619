#include <iostream>

int main() {
    std::string user_input;

    // Prompt the user for input
    std::cout << "Enter your name: ";
    std::getline(std::cin, user_input);

    // Vulnerable code using user input in format string
    printf("Hello, %s\n", user_input.c_str());

    return 0;
