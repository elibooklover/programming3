#include <iostream>
using namespace std;

int main() {
    for (int i = 0; i < 3; ++i) {
        std::string firstInput, secondInput;

        // First input
        std::cout << "Enter the first word: ";
        std::getline(std::cin, firstInput);

        // Second input
        std::cout << "Enter the second word: ";
        std::getline(std::cin, secondInput);

        // Concatenate the two words
        std::string result = firstInput + secondInput;

        // Print the output
        std::cout << "Output: " << result << "\n"<< std::endl;
    }

    return 0;
}
